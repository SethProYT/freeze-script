local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("freeze yourself", "Ocean")

local Tab = Window:NewTab("freeze")
local Section = Tab:NewSection("scripts")


Section:NewToggle("freeze humanoid root part", "lol", function(state)
    if state then
    getgenv().freeze = true
    if getgenv().freeze == true then
        game.Players.LocalPlayer.Character.HumanoidRootPart.Anchored = true
        local args = {
            [1] = "(value) has disconnected",
            [2] = "All"
        }
        
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(unpack(args))
        
    end
    else
    game.Players.LocalPlayer.Character.HumanoidRootPart.Anchored = false
    local args = {
        [1] = "(value) has reconnected",
        [2] = "All"
    }
    
    game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(unpack(args))
    
    end
end)

Section:NewButton("fake disconnect", "xd", function()
    -- Script generated by SimpleSpy - credits to exx#9394

local args = {
    [1] = "(value) has disconnected",
    [2] = "All"
}

game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(unpack(args))

end)

Section:NewButton("fake reconnect", "xd", function()
    -- Script generated by SimpleSpy - credits to exx#9394

local args = {
    [1] = "(value) has reconnected",
    [2] = "All"
}

game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(unpack(args))

end)